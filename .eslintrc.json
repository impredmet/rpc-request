{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "curly": "error",
    "eqeqeq": "error",
    "linebreak-style": "error",
    "quotes": ["error", "single"],
    "prefer-destructuring": "error",
    "semi": "error"
  }
}
